<%= form_for(@blog) do |f| %>

  <% if @blog.errors.full_messages.count > 0 %>
    <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :title, 'Blog Title' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :url, 'Site URL' %>
    <%= f.text_field :url %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label 'Upload Blog Site Image' %>
    <%= f.file_field :image_url %>
  </div> 
  <div>
    <%= f.submit %>
  </div>
<% end %>
